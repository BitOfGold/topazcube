{
  "name": "topazcube",
  "version": "0.1.0",
  "description": "TopazCube is a real-time collaborative document editing, and multiplayer game library.",
  "author": "László Matuska @BitOfGold",
  "license": "Apache-2.0",
  "homepage": "https://topazcube.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BitOfGold/topazcube.git"
  },
  "bugs": {
    "url": "https://github.com/BitOfGold/topazcube/issues"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "src",
    "dist/*",
    "index.d.ts",
    "server.d.ts",
    "client.d.ts",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "multiplayer",
    "multiplayer game",
    "multiplayer server",
    "multiplayer client",
    "multiplayer document",
    "collaborative document",
    "multiplayer editor",
    "collaborative editor",
    "multiplayer game",
    "collaborative game"
  ],
  "sideEffects": false,
  "exports": {
    "./client": {
      "import": "./dist/topazcube-client.js"
    },
    "./server": {
      "import": "./dist/topazcube-server.js"
    },
    "./terminal": {
      "import": "./src/terminal.js"
    }
  },
  "type": "module",
  "scripts": {
    "patch": "patch-package",
    "dev:server": "NODE_ENV=development LIB_NAME=server vite build  --watch",
    "dev:client": "NODE_ENV=development LIB_NAME=client vite build  --watch",
    "dev": "reset && npm run dev:server && npm run dev:client",
    "build:server": "NODE_ENV=production LIB_NAME=server vite build",
    "build:client": "NODE_ENV=production LIB_NAME=client vite build",
    "build:types": "tsc src/*.ts --declaration --emitDeclarationOnly --declarationDir dist/ --target es2022 --moduleResolution node",
    "build": "reset && npm run build:server && npm run build:client && npm run build:types"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "vite": "^6.3.2",
    "vite-plugin-externalize-deps": "^0.9.0"
  },
  "dependencies": {
    "@roamhq/wrtc": "^0.8.0",
    "fast-json-patch": "^3.1.1",
    "gl-matrix": "^3.4.3",
    "mongodb": "^6.15.0",
    "msgpackr": "^1.11.2",
    "patch-package": "^8.0.0",
    "util": "^0.12.5",
    "ws": "^8.18.1"
  }
}
