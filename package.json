{
  "name": "topazcube",
  "version": "0.1.4",
  "description": "TopazCube is a real-time collaborative document editing, and multiplayer game library.",
  "author": "László Matuska @BitOfGold",
  "license": "Apache-2.0",
  "homepage": "https://topazcube.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BitOfGold/topazcube.git"
  },
  "bugs": {
    "url": "https://github.com/BitOfGold/topazcube/issues"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "src",
    "dist/*",
    "index.d.ts",
    "server.d.ts",
    "client.d.ts",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "multiplayer",
    "multiplayer game",
    "multiplayer server",
    "multiplayer client",
    "multiplayer document",
    "collaborative document",
    "multiplayer editor",
    "collaborative editor",
    "multiplayer game",
    "collaborative game"
  ],
  "sideEffects": false,
  "exports": {
    "./client": {
      "import": "./dist/client.js",
      "require": "./dist/client.cjs"
    },
    "./server": {
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    },
    "./terminal": {
      "import": "./dist/terminal.js",
      "require": "./dist/terminal.cjs"
    }
  },
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "@types/ws": "^8.18.1",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@roamhq/wrtc": "^0.8.0",
    "fast-json-patch": "^3.1.1",
    "gl-matrix": "^3.4.3",
    "mongodb": "^6.15.0",
    "msgpackr": "^1.11.2",
    "patch-package": "^8.0.0",
    "util": "^0.12.5",
    "ws": "^8.18.1"
  }
}
